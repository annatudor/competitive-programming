{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ File",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
